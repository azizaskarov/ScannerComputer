<Window x:Class="Scanner.UI.MainMenuFolder.EnterComputerName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scanner.UI.MainMenuFolder"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Добавить категория" WindowStartupLocation="CenterOwner"  VerticalAlignment="Center"
        MinHeight="300" MinWidth="400" MaxHeight="300" MaxWidth="400">

    <Grid Margin="5,2,0,2" Height="290" Width="390">
        <StackPanel>
            <TextBox x:Name="computerName" Margin="1 100 0 30" Width="387" materialDesign:HintAssist.FloatingHintHorizontalAlignment="Left" HorizontalAlignment="Left" materialDesign:HintAssist.Hint=" 
                     Название computer"  materialDesign:HintAssist.IsFloating="True"  materialDesign:HintAssist.HintOpacity="0.4" Padding="0.1" FontSize="20" 
                      PreviewTextInput="ComputerName_OnPreviewTextInput" Height="52"  />
            <Button Height="30" Width="150"  Background="#FF4282D8" Click="ButtonBase_OnClick"  FontFamily="Arial" FontSize="18">Добавить</Button>
        </StackPanel>

    </Grid>
</Window>
